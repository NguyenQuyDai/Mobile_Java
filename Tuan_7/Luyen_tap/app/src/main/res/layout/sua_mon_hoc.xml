<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sửa Môn Học"
            android:textSize="12pt"
            android:textStyle="bold"
            android:textColor="#E91E63"/>

        <TextView
            android:id="@+id/textViewID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textSize="12pt"
            android:textColor="#4CAF50"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextMaMHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập mã môn học" />

        <EditText
            android:id="@+id/editTextTenMHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập tên môn học"/>

        <Button
            android:id="@+id/btnChonAnhSua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn Ảnh"
            android:textSize="10pt"
            android:textColor="#fff"
            android:textStyle="bold"
            android:backgroundTint="#673AB7"/>

        <ImageView
            android:id="@+id/imgSua"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/java" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sửa"
                android:textColor="#fff"
                android:textSize="10pt"
                android:backgroundTint="#8BC34A"/>

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"
                android:textColor="#fff"
                android:textSize="10pt"
                android:backgroundTint="#FA2C1D"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>