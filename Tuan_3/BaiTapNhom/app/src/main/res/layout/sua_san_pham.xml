<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa Sản Phẩm"
            android:textStyle="bold"
            android:textSize="10pt"
            android:textColor="#F44336"
            android:gravity="center"/>

        <EditText
            android:id="@+id/edtMaSPSua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập mã sản phẩm mới"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/edtTenSPSua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập tên sản phẩm mới"
            android:inputType="text"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/edtGiaSPSua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập giá sản mới"
            android:textSize="7pt" />

        <Button
            android:id="@+id/btnChonAnhMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh"
            android:textStyle="bold"
            android:textSize="10pt"
            android:backgroundTint="#3F51B5"/>

        <ImageView
            android:id="@+id/imgAnhCu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dogiadung" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:textStyle="bold"
                android:text="Sửa" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="20dp" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:backgroundTint="#F44336"
                android:text="Hủy" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>