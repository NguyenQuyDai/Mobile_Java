<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết công việc"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/tvMaCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Công Việc"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#9C27B0"/>

        <TextView
            android:id="@+id/tvTenCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Công Việc"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#F44336" />

        <TextView
            android:id="@+id/tvNoiDungCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội Dung Công Việc"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#3F51B5"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hạn Cuối"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="#9C27B0" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:padding="5dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>